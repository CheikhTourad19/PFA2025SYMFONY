{# templates/pharmacie/profile.html.twig #}
{% extends 'pharmacie/pharmacie.base.html.twig' %}

{% block title %}Modifier Profil{% endblock %}

{% block content %}
    <div class="container mx-auto px-4 py-8">
        <h1 class="text-3xl font-bold text-center text-gray-800 dark:text-white mb-8">Modifier mes informations</h1>

        {# Profile Form #}
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg dark:shadow-gray-900 p-6 mb-8 max-w-2xl mx-auto">
            <h2 class="text-2xl font-bold text-gray-800 dark:text-white mb-4">Profil</h2>
            {{ form_start(profileForm) }}
            <div class="space-y-4">
                {# Hidden fields for nom and prenom #}
                {{ form_widget(profileForm.nom) }}
                {{ form_widget(profileForm.prenom) }}

                {# Visible fields #}
                {{ form_row(profileForm.email, {
                    'attr': {'class': 'w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 dark:focus:ring-blue-400 dark:bg-gray-700 dark:text-white'},
                    'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300'}
                }) }}
                {{ form_row(profileForm.numero, {
                    'attr': {'class': 'w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 dark:focus:ring-blue-400 dark:bg-gray-700 dark:text-white'},
                    'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300'}
                }) }}
                {{ form_row(profileForm.currentPassword, {
                    'attr': {'class': 'w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 dark:focus:ring-blue-400 dark:bg-gray-700 dark:text-white'},
                    'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300'}
                }) }}
                {{ form_row(profileForm.newPassword, {
                    'attr': {'class': 'w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 dark:focus:ring-blue-400 dark:bg-gray-700 dark:text-white'},
                    'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300'}
                }) }}
            </div>

            <div class="mt-6">
                <button type="button" class="w-full px-4 py-2 bg-blue-500 dark:bg-blue-600 text-white rounded-lg hover:bg-blue-600 dark:hover:bg-blue-700 transition-colors" aria-haspopup="dialog" aria-expanded="false" aria-controls="slide-up-animated-modal" data-overlay="#slide-up-animated-modal">Changer</button>

                <div id="slide-up-animated-modal" class="overlay modal overlay-open:opacity-100 overlay-open:duration-300 hidden" role="dialog" tabindex="-1">
                    <div class="overlay-animation-target modal-dialog overlay-open:mt-4 overlay-open:opacity-100 overlay-open:duration-300 mt-12 transition-all ease-out" >
                        <div class="modal-content">
                            <div class="modal-header">
                                <h3 class="modal-title">Modifier Profil</h3>
                                <button type="button" class="btn btn-text btn-circle btn-sm absolute end-3 top-3" aria-label="Close" data-overlay="#slide-up-animated-modal">
                                    <span class="icon-[tabler--x] size-4">X</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                Etes vous sur de vouloir chnager vos informations ?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-soft btn-secondary" data-overlay="#slide-up-animated-modal">
                                    Fermer
                                </button>
                                <button type="submit" class=" px-4 py-2 bg-blue-500 dark:bg-blue-600 text-white rounded-lg hover:bg-blue-600 dark:hover:bg-blue-700 transition-colors">Sauvgarder changements</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{ form_end(profileForm) }}
        </div>

        {# Address Form #}
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg dark:shadow-gray-900 p-6 max-w-2xl mx-auto">
            <h2 class="text-2xl font-bold text-gray-800 dark:text-white mb-4">Adresse</h2>
            {{ form_start(addressForm) }}
            <div class="space-y-4">
                {{ form_row(addressForm.rue, {
                    'attr': {'class': 'w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 dark:focus:ring-blue-400 dark:bg-gray-700 dark:text-white'},
                    'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300'}
                }) }}
                {{ form_row(addressForm.ville, {
                    'attr': {'class': 'w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 dark:focus:ring-blue-400 dark:bg-gray-700 dark:text-white'},
                    'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300'}
                }) }}
                {{ form_row(addressForm.quartier, {
                    'attr': {'class': 'w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 dark:focus:ring-blue-400 dark:bg-gray-700 dark:text-white'},
                    'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300'}
                }) }}
            </div>

            <div class="mt-6">
                <button type="button" class="w-full px-4 py-2 bg-blue-500 dark:bg-blue-600 text-white rounded-lg hover:bg-blue-600 dark:hover:bg-blue-700 transition-colors" aria-haspopup="dialog" aria-expanded="false" aria-controls="slide-up-animated-modal1" data-overlay="#slide-up-animated-modal1">Changer</button>

                <div id="slide-up-animated-modal1" class="overlay modal overlay-open:opacity-100 overlay-open:duration-300 hidden" role="dialog" tabindex="-1">
                    <div class="overlay-animation-target modal-dialog overlay-open:mt-4 overlay-open:opacity-100 overlay-open:duration-300 mt-12 transition-all ease-out" >
                        <div class="modal-content">
                            <div class="modal-header">
                                <h3 class="modal-title">Modifier Profil</h3>
                                <button type="button" class="btn btn-text btn-circle btn-sm absolute end-3 top-3" aria-label="Close" data-overlay="#slide-up-animated-modal1">
                                    <span class="icon-[tabler--x] size-4">X</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                Etes vous sur de vouloir chnager vos informations ?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-soft btn-secondary" data-overlay="#slide-up-animated-modal1">
                                    Close
                                </button>
                                <button type="submit" class=" px-4 py-2 bg-blue-500 dark:bg-blue-600 text-white rounded-lg hover:bg-blue-600 dark:hover:bg-blue-700 transition-colors">Sauvgarder changements</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{ form_end(addressForm) }}
        </div>
    </div>
{% endblock %}