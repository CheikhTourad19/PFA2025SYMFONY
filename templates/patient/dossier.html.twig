{% extends 'patient/patient.base.html.twig' %}
{% block title %}
    Dossier Medicale
{% endblock %}

{% block content %}
    <div class="min-h-screen bg-white dark:bg-gray-900 text-gray-800 dark:text-white py-10 px-4">
        <div class="max-w-4xl mx-auto">
            <div class="flex justify-between items-center mb-6">
                <h1 class="text-4xl font-bold text-blue-800 dark:text-blue-400">Dossier Médical</h1>

            </div>

            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 space-y-6">
                <div class="grid sm:grid-cols-2 gap-6">
                    <div>
                        <p class="text-sm text-blue-700 dark:text-blue-300 font-semibold">Nom du patient</p>
                        <p class="text-lg">{{ dossier.patient.nom }} {{ dossier.patient.prenom }}</p>
                    </div>

                    <div>
                        <p class="text-sm text-blue-700 dark:text-blue-300 font-semibold">Groupe Sanguin</p>
                        <p class="text-lg">{{ dossier.groupeSanguin }}</p>
                    </div>

                    <div>
                        <p class="text-sm text-blue-700 dark:text-blue-300 font-semibold">Allergies</p>
                        <p class="text-lg">{{ dossier.allergies ?: 'Non spécifié' }}</p>
                    </div>

                    <div>
                        <p class="text-sm text-blue-700 dark:text-blue-300 font-semibold">Antécédents Médicaux</p>
                        <p class="text-lg">{{ dossier.antecedentsMedicaux ?: 'Non spécifié' }}</p>
                    </div>

                    <div>
                        <p class="text-sm text-blue-700 dark:text-blue-300 font-semibold">Antécédents Familiaux</p>
                        <p class="text-lg">{{ dossier.antecedentsFamiliaux ?: 'Non spécifié' }}</p>
                    </div>

                    <div>
                        <p class="text-sm text-blue-700 dark:text-blue-300 font-semibold">Date de création</p>
                        <p class="text-lg">{{ dossier.dateCreation|date('d/m/Y H:i') }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}