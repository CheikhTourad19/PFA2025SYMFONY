{% extends 'patient/patient.base.html.twig' %}

{% block title %}Liste des Médicaments{% endblock %}

{% block content %}

    <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-800 dark:text-white mb-2">Ordonnance Médicale</h1>
        <p class="text-gray-600 dark:text-gray-300">Liste des médicaments prescrits avec leurs détails</p>
    </div>

    <div class="relative overflow-x-auto shadow-md rounded-lg">

        <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
            <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
            <tr>
                <th scope="col" class="px-6 py-3">
                    Nom Médicament
                </th>
                <th scope="col" class="px-6 py-3">
                    Quantité
                </th>
                <th scope="col" class="px-6 py-3">
                    Instructions
                </th>
                <th scope="col" class="px-6 py-3">
                    Description
                </th>
                <th scope="col" class="px-6 py-3">
                    Prix
                </th>
            </tr>
            </thead>
            <tbody>
            {% for med in medicaments %}
                <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 border-gray-200 hover:bg-gray-50 dark:hover:bg-gray-600">
                    <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                        {{ med.medicament.nom }}
                    </th>
                    <td class="px-6 py-4">
                        {{ med.quantite }}
                    </td>
                    <td class="px-6 py-4">
                        {{ med.instructions }}
                    </td>
                    <td class="px-6 py-4">
                        {{ med.medicament.description }}
                    </td>
                    <td class="px-6 py-4">
                        {{ med.medicament.prix }}
                    </td>
                </tr>
            {% endfor %}
            </tbody>

            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 border-gray-200">
                <th class="px-6 py-4" scope="row">
                    <span class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">Total</span>
                </th>
                <td class="px-6 py-4 font-semibold">
                    {{ total }}
                </td>
            </tr>
        </table>
        <a href="/patient/ordonnances"
           class="inline-flex items-center px-4 py-2.5 text-sm font-medium text-white bg-gradient-to-r from-blue-500 to-cyan-500 rounded-lg hover:from-blue-600 hover:to-cyan-600 focus:ring-4 focus:outline-none focus:ring-cyan-200 dark:focus:ring-cyan-800 shadow-md hover:shadow-lg transition-all duration-300 transform hover:-translate-y-0.5">
            <svg class="w-4 h-4 me-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 5H1m0 0l4 4M1 5l4-4"/>
            </svg>
            Retour aux ordonnances
        </a>
    </div>

{% endblock %}