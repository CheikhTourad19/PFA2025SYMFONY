{% extends 'patient/patient.base.html.twig' %}

{% block title %}Mes Ordonnances Médicales{% endblock %}

{% block content %}

    <div class="mb-8 text-center md:text-left">
        <h1 class="text-3xl md:text-4xl font-extrabold text-gray-800 dark:text-white mb-3">
            <span class="bg-clip-text text-transparent bg-blue-700 from-blue-600 to-cyan-400">
                Mes Ordonnances
            </span>
        </h1>
        <p class="text-lg text-gray-600 dark:text-gray-300 max-w-2xl">
            Consultez l'historique complet de vos prescriptions médicales
        </p>
        <div class="mt-4 w-20 h-1 bg-gradient-to-r from-blue-500 to-cyan-300 rounded-full"></div>
    </div>

    {% if ordonnances|length > 0 %}
        <div class="relative overflow-x-auto shadow-lg sm:rounded-lg">
            <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
                <thead class="text-xs text-gray-700 uppercase bg-gradient-to-r from-gray-50 to-gray-100 dark:from-gray-700 dark:to-gray-600 dark:text-gray-400">
                <tr>
                    <th scope="col" class="px-6 py-4">
                        Référence
                    </th>
                    <th scope="col" class="px-6 py-4">
                        Médecin Prescripteur
                    </th>
                    <th scope="col" class="px-6 py-4">
                        Date de prescription
                    </th>
                    <th scope="col" class="px-6 py-4 text-right">
                        Actions
                    </th>
                </tr>
                </thead>
                <tbody>
                {% for ordonnance in ordonnances %}
                    <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-blue-50 dark:hover:bg-gray-600 transition duration-150">
                        <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                            #{{ ordonnance.id }}
                        </th>
                        <td class="px-6 py-4">
                            Dr. {{ ordonnance.medecin.user.nom }}
                        </td>
                        <td class="px-6 py-4">
                            {{ ordonnance.getDateCreation|date('d/m/Y') }}
                        </td>
                        <td class="px-6 py-4 text-right">
                            <a href="/patient/ordonnance/{{ ordonnance.id }}"
                               class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-blue-600 rounded-lg hover:from-blue-600 hover:bg-blue-900 focus:ring-4 focus:outline-none focus:ring-blue-200 dark:focus:ring-blue-800 transition-all">
                                Voir détails
                                <svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
                                </svg>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <div class="max-w-2xl mx-auto p-6 bg-white border border-gray-200 rounded-xl shadow-sm hover:shadow-md transition-shadow dark:bg-gray-800 dark:border-gray-700">
            <div class="text-center py-8">
                <svg class="mx-auto h-16 w-16 text-gray-400 dark:text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
                <h3 class="mt-4 text-2xl font-bold text-gray-800 dark:text-white">Aucune ordonnance enregistrée</h3>
                <p class="mt-2 text-gray-600 dark:text-gray-300">
                    Vos prescriptions médicales apparaîtront ici dès qu'un médecin vous en établira une.
                </p>
                <div class="mt-6">
                    <a href="#" class="inline-flex items-center px-4 py-2 text-sm font-medium text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300">
                        Consulter un médecin
                        <svg class="w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
                        </svg>
                    </a>
                </div>
            </div>
        </div>
    {% endif %}

{% endblock %}