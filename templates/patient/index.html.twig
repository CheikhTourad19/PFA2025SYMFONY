        <script>
            document.addEventListener('DOMContentLoaded', function() {
                const modal = document.getElementById('tutorialModal');
                const skipButton = document.getElementById('skipTutorial');
                const skipButtonBottom = document.getElementById('skipTutorialBottom');
                const prevButton = document.getElementById('prevSlide');
                const nextButton = document.getElementById('nextSlide');
                const slides = document.querySelectorAll('.slide');
                const indicators = document.querySelectorAll('.slide-indicator');
                let currentSlide = 0;

                // Show modal with animation
                setTimeout(() => {
                    modal.classList.remove('opacity-0');
                    modal.classList.remove('pointer-events-none');
                    modal.querySelector('.modal-content').classList.remove('scale-95');
                }, 100);

                // Initialize
                function initTutorial() {
                    showSlide(0);
                    updateButtons();
                }

                // Show current slide
                function showSlide(index) {
                    slides.forEach((slide, i) => {
                        slide.classList.toggle('opacity-0', i !== index);
                        slide.classList.toggle('opacity-100', i === index);
                    });

                    // Update indicators
                    indicators.forEach((indicator, i) => {
                        indicator.classList.toggle('bg-gray-300', i !== index);
                        indicator.classList.toggle('bg-blue-600', i === index);
                        indicator.classList.toggle('w-3', i !== index);
                        indicator.classList.toggle('w-8', i === index);
                    });

                    currentSlide = index;
                    updateButtons();
                }

                // Update navigation buttons
                function updateButtons() {
                    prevButton.disabled = currentSlide === 0;

                    if (currentSlide === slides.length - 1) {
                        nextButton.innerHTML = `
                    <div class="flex items-center">
                        Terminer
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                        </svg>
                    </div>
                `;
                    } else {
                        nextButton.innerHTML = `
                    <div class="flex items-center">
                        Suivant
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                        </svg>
                    </div>
                `;
                    }
                }

                // Next slide
                nextButton.addEventListener('click', function() {
                    if (currentSlide < slides.length - 1) {
                        showSlide(currentSlide + 1);
                    } else {
                        closeModal();
                    }
                });

                // Previous slide
                prevButton.addEventListener('click', function() {
                    if (currentSlide > 0) {
                        showSlide(currentSlide - 1);
                    }
                });

                // Indicator clicks
                indicators.forEach((indicator, index) => {
                    indicator.addEventListener('click', () => {
                        showSlide(index);
                    });
                });

                // Skip tutorial
                skipButton.addEventListener('click', closeModal);
                skipButtonBottom.addEventListener('click', closeModal); // Added event listener for bottom skip button

                // Close modal with animation
                function closeModal() {
                    modal.classList.add('opacity-0');
                    modal.classList.add('pointer-events-none');

                    // Fix: Changed selector to look for div instead of non-existent .modal-content class
                    const modalContent = modal.querySelector('div:first-child');
                    if (modalContent) {
                        modalContent.classList.add('scale-95');
                    }

                    setTimeout(() => {
                        modal.style.display = 'none';
                    }, 300);
                }

                // Keyboard navigation
                document.addEventListener('keydown', function(e) {
                    if (modal.style.display !== 'none') {
                        if (e.key === 'ArrowRight') {
                            nextButton.click();
                        } else if (e.key === 'ArrowLeft') {
                            prevButton.click();
                        } else if (e.key === 'Escape') {
                            closeModal();
                        }
                    }
                });

                // Initialize
                initTutorial();
            });
        </script>

