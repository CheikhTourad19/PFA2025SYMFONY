{% extends 'patient/patient.base.html.twig' %}
{% block title %}Liste des pharmacies{% endblock %}

{% block content %}
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Header Section -->
        <div class="mb-10 text-center">
            <h1 class="text-4xl font-bold text-gray-800 dark:text-white mb-3">Nos Pharmacies Partenaires</h1>
            <p class="text-xl text-gray-600 dark:text-gray-300 mb-6">Trouvez la pharmacie la plus proche de vous</p>
            <div class="w-24 h-1.5 bg-gradient-to-r from-blue-500 to-teal-400 mx-auto rounded-full"></div>
        </div>

        <!-- Search Section -->
        <div class="mb-10 bg-white dark:bg-gray-800 p-6 rounded-xl shadow-lg">
            <p class="text-gray-700 dark:text-gray-300 mb-4 font-medium">Recherchez par adresse ou nom de pharmacie</p>
            <div class="relative max-w-2xl mx-auto">
                <div class="absolute inset-y-0 start-0 flex items-center ps-4 pointer-events-none">
                    <svg class="w-5 h-5 text-gray-500 dark:text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"/>
                    </svg>
                </div>
                <input type="search" id="searchInput" class="block w-full p-4 ps-12 text-base text-gray-900 border border-gray-200 rounded-xl bg-gray-50 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 transition-all duration-200" placeholder="Entrez un nom ou une adresse..." />
            </div>
        </div>

        <!-- Pharmacy Cards (Mobile) -->
        <div id="mobilePharmaciesList" class="grid grid-cols-1 gap-6 md:hidden">
            {% for pharmacie in pharmacies %}
                <div class="pharmacy-card bg-white dark:bg-gray-800 rounded-xl shadow-md overflow-hidden border border-gray-100 dark:border-gray-700 transition-transform duration-200 hover:scale-[1.02]"
                     data-name="{{ (pharmacie.user.nom ~ ' ' ~ pharmacie.user.prenom)|lower }}"
                     data-address="{% if pharmacie.adresse %}{{ (pharmacie.adresse.ville ~ ' ' ~ pharmacie.adresse.quartier ~ ' ' ~ pharmacie.adresse.rue)|lower }}{% endif %}">
                    <div class="p-6">
                        <div class="flex items-start space-x-4">
                            <div class="flex-shrink-0 bg-blue-100 dark:bg-blue-900 p-3 rounded-lg">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-600 dark:text-blue-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                                </svg>
                            </div>
                            <div class="flex-1">
                                <h3 class="text-lg font-semibold text-gray-800 dark:text-white">{{ pharmacie.user.nom }} {{ pharmacie.user.prenom }}</h3>
                                <div class="mt-2 space-y-1 text-sm text-gray-600 dark:text-gray-300">
                                    <div class="flex items-center">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                                        </svg>
                                        {{ pharmacie.user.numero }}
                                    </div>
                                    <div class="flex items-center">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                                        </svg>
                                        {{ pharmacie.user.email }}
                                    </div>
                                    {% if pharmacie.adresse %}
                                        <div class="flex items-start">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                                            </svg>
                                            <span>{{ pharmacie.adresse.ville }}, {{ pharmacie.adresse.quartier }}, {{ pharmacie.adresse.rue }}</span>
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        <!-- Pharmacy Table (Desktop) -->
        <div id="desktopPharmaciesTable" class="hidden md:block bg-white dark:bg-gray-800 rounded-xl shadow-lg overflow-hidden border border-gray-100 dark:border-gray-700">
            <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
                <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                <tr>
                    <th scope="col" class="px-6 py-4 font-medium">
                        <div class="flex items-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                            </svg>
                            Nom de Pharmacie
                        </div>
                    </th>
                    <th scope="col" class="px-6 py-4 font-medium">
                        <div class="flex items-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                            </svg>
                            Numéro
                        </div>
                    </th>
                    <th scope="col" class="px-6 py-4 font-medium">
                        <div class="flex items-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                            </svg>
                            E-mail
                        </div>
                    </th>
                    <th scope="col" class="px-6 py-4 font-medium">
                        <div class="flex items-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                            </svg>
                            Adresse
                        </div>
                    </th>
                </tr>
                </thead>
                <tbody id="pharmaciesTableBody">
                {% for pharmacie in pharmacies %}
                    <tr class="pharmacy-row bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors duration-150"
                        data-name="{{ (pharmacie.user.nom ~ ' ' ~ pharmacie.user.prenom)|lower }}"
                        data-address="{% if pharmacie.adresse %}{{ (pharmacie.adresse.ville ~ ' ' ~ pharmacie.adresse.quartier ~ ' ' ~ pharmacie.adresse.rue)|lower }}{% endif %}">
                        <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                            {{ pharmacie.user.nom }} {{ pharmacie.user.prenom }}
                        </th>
                        <td class="px-6 py-4">
                            {{ pharmacie.user.numero }}
                        </td>
                        <td class="px-6 py-4">
                            {{ pharmacie.user.email }}
                        </td>
                        <td class="px-6 py-4">
                            {% if pharmacie.adresse %}
                                {{ pharmacie.adresse.ville }}, {{ pharmacie.adresse.quartier }}, {{ pharmacie.adresse.rue }}
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <!-- No Results Message (Hidden by default) -->
        <div id="noResults" class="hidden text-center py-10">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto text-gray-400 dark:text-gray-500 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <h3 class="text-xl font-medium text-gray-700 dark:text-gray-300">Aucun résultat trouvé</h3>
            <p class="text-gray-500 dark:text-gray-400 mt-2">Aucune pharmacie ne correspond à votre recherche.</p>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('searchInput');
            const mobilePharmaciesList = document.getElementById('mobilePharmaciesList');
            const desktopPharmaciesTable = document.getElementById('desktopPharmaciesTable');
            const noResultsMessage = document.getElementById('noResults');
            const pharmacyCards = document.querySelectorAll('.pharmacy-card');
            const pharmacyRows = document.querySelectorAll('.pharmacy-row');

            // Function to check if mobile view
            function isMobileView() {
                return window.matchMedia('(max-width: 767px)').matches;
            }

            searchInput.addEventListener('input', function() {
                const searchTerm = this.value.trim().toLowerCase();
                let hasResults = false;

                // Filter mobile cards
                pharmacyCards.forEach(card => {
                    const name = card.getAttribute('data-name');
                    const address = card.getAttribute('data-address');

                    if (name.includes(searchTerm) || (address && address.includes(searchTerm))) {
                        card.style.display = 'block';
                        hasResults = true;
                    } else {
                        card.style.display = 'none';
                    }
                });

                // Filter desktop rows
                pharmacyRows.forEach(row => {
                    const name = row.getAttribute('data-name');
                    const address = row.getAttribute('data-address');

                    if (name.includes(searchTerm) || (address && address.includes(searchTerm))) {
                        row.style.display = '';
                        hasResults = true;
                    } else {
                        row.style.display = 'none';
                    }
                });

                // Show/hide no results message and appropriate view
                if (searchTerm.length > 0 && !hasResults) {
                    noResultsMessage.classList.remove('hidden');
                    mobilePharmaciesList.classList.add('hidden');
                    desktopPharmaciesTable.classList.add('hidden');
                } else {
                    noResultsMessage.classList.add('hidden');

                    // Show only the appropriate view based on screen size
                    if (isMobileView()) {
                        mobilePharmaciesList.classList.remove('hidden');
                        desktopPharmaciesTable.classList.add('hidden');
                    } else {
                        mobilePharmaciesList.classList.add('hidden');
                        desktopPharmaciesTable.classList.remove('hidden');
                    }
                }
            });

            // Handle window resize to maintain correct view
            window.addEventListener('resize', function() {
                if (searchInput.value.trim().length > 0) {
                    if (isMobileView()) {
                        mobilePharmaciesList.classList.remove('hidden');
                        desktopPharmaciesTable.classList.add('hidden');
                    } else {
                        mobilePharmaciesList.classList.add('hidden');
                        desktopPharmaciesTable.classList.remove('hidden');
                    }
                }
            });
        });
    </script>
{% endblock %}