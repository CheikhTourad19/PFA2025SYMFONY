{# templates/registration/register.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}
    <div class="flex min-h-screen items-center justify-center bg-cover bg-center" style="background-image: url('assets/img.jpg');">
        <div class="w-full max-w-md p-8 space-y-6 bg-white bg-opacity-70 shadow-lg rounded-2xl">
            <h2 class="text-center text-2xl font-bold text-gray-800">Sign in to your account</h2>

            {# Display flash messages #}
            {% for type, messages in app.flashes %}
                {% for message in messages %}
                    <div class="text-red-600">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}

            {# Render the form #}
            {{ form_start(registrationForm, {
                'attr': {'class': 'space-y-4'},
                'action': path('app_register'),
                'method': 'POST'
            }) }}

            {# Form fields #}
            {% for field in registrationForm %}
                <div>
                    {{ form_label(field, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    {{ form_widget(field, {'attr': {'class': 'w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:border-blue-500'}}) }}
                </div>
            {% endfor %}

            <button class="w-full py-2 bg-blue-600 text-white font-semibold rounded-md shadow hover:bg-blue-500" type="submit">
                S'inscrire
            </button>

            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}