{# templates/admin/users.html.twig #}
{% extends 'admin/admin.base.html.twig' %}

{% block head %}
    {{ parent() }}
    <script defer src="https://unpkg.com/alpinejs@3.13.5/dist/cdn.min.js"></script>
{% endblock %}

{% block content %}
    <div x-data="{
    activeTab: 'medecin',
    searchQuery: ''
}"
         class="container mx-auto p-6">

        <!-- Tabs -->
        <div class="flex flex-wrap gap-2 mb-8">
            <template x-for="tab in ['medecin', 'pharmacie', 'infermier', 'patient']" :key="tab">
                <button
                        @click="activeTab = tab"
                        :class="{
                    'bg-blue-600 text-white shadow-md': activeTab === tab,
                    'bg-white text-gray-600 hover:bg-gray-50': activeTab !== tab
                }"
                        class="px-6 py-3 rounded-lg flex items-center gap-2 transition-all duration-300"
                >
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <template x-if="tab === 'medecin'">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.121 17.804A13.937 13.937 0 0112 16c2.5 0 4.847.655 6.879 1.804M15 10a3 3 0 11-6 0 3 3 0 016 0zm6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </template>
                        <template x-if="tab === 'pharmacie'">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                        </template>
                        <template x-if="tab === 'infermier'">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10l-2 1m0 0l-2-1m2 1v2.5M20 7l-2 1m2-1l-2-1m2 1v2.5M14 4l-2-1.5M14 4l2-1.5M4 7l2-1M4 7l2 1M4 7v2.5M12 21l-2-1m2 1l2-1m-2 1v-2.5M6 18l-2-1.5L6 15v2.5z"/>
                        </template>
                        <template x-if="tab === 'patient'">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                        </template>
                    </svg>
                    <span class="capitalize" x-text="tab + 's'"></span>
                    <span class="bg-blue-100 text-blue-800 text-sm px-2 py-1 rounded-full"
                          x-text="{{ '{' ~
                          'medecin: medecins|length, ' ~
                          'pharmacie: pharmacies|length, ' ~
                          'infermier: infermiers|length, ' ~
                          'patient: patients|length' ~
                          '}[activeTab]' }}"></span>
                </button>
            </template>
        </div>

        <!-- Search/Add -->
        <div class="flex flex-col md:flex-row gap-4 mb-6"
             x-transition:enter="transition ease-out duration-300"
             x-transition:enter-start="opacity-0"
             x-transition:enter-end="opacity-100">
            <div class="relative flex-1 max-w-md">
                <input type="text" x-model="searchQuery"
                       placeholder="Rechercher..."
                       class="w-full pl-10 pr-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 transition-all duration-300">
                <svg class="w-5 h-5 absolute left-3 top-3 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                </svg>
            </div>
            <a href="#"
               @click.prevent="window.location.href = '{{ path('app_admin_user_add', {type: 'medecin'}) }}'.replace('medecin', activeTab)"
               class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 flex items-center gap-2 transition-colors duration-300">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                </svg>
                Ajouter
            </a>
        </div>

        <!-- Tables Container -->
        <div x-cloak>
            <!-- Medecins Table -->
            <template x-if="activeTab === 'medecin'">
                <div x-show="activeTab === 'medecin'"
                     x-transition:enter="transition ease-out duration-300"
                     x-transition:enter-start="opacity-0 transform translate-y-4"
                     x-transition:enter-end="opacity-100 transform translate-y-0"
                     x-transition:leave="transition ease-in duration-200"
                     x-transition:leave-start="opacity-100 transform translate-y-0"
                     x-transition:leave-end="opacity-0 transform translate-y-4">
                    <div class="bg-white rounded-lg shadow overflow-x-auto">
                        <table class="w-full">
                            <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-4 text-left text-sm font-semibold text-gray-700">Nom</th>
                                <th class="px-6 py-4 text-left text-sm font-semibold text-gray-700">Prénom</th>
                                <th class="px-6 py-4 text-left text-sm font-semibold text-gray-700">Email</th>
                                <th class="px-6 py-4 text-left text-sm font-semibold text-gray-700">Téléphone</th>
                                <th class="px-6 py-4 text-left text-sm font-semibold text-gray-700">Spécialité</th>
                                <th class="px-6 py-4 text-left text-sm font-semibold text-gray-700">Actions</th>
                            </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-200">
                            {% for medecin in medecins %}
                                <tr class="hover:bg-gray-50 transition-colors duration-200">
                                    <td class="px-6 py-4">{{ medecin.user.nom }}</td>
                                    <td class="px-6 py-4">{{ medecin.user.prenom }}</td>
                                    <td class="px-6 py-4 text-blue-600">{{ medecin.user.email }}</td>
                                    <td class="px-6 py-4">{{ medecin.user.numero }}</td>
                                    <td class="px-6 py-4">
                                    <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm">
                                        {{ medecin.service }}
                                    </span>
                                    </td>
                                    <td class="px-6 py-4 space-x-3">
                                        <a href="{{ path('app_admin_user_edit', {type: 'medecin', id: medecin.user.id}) }}"
                                           class="text-blue-600 hover:text-blue-900 inline-flex items-center gap-1 transition-colors">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/>
                                            </svg>
                                            Modifier
                                        </a>
                                        <a href="{{ path('app_admin_user_delete', {type: 'medecin', id: medecin.user.id}) }}"
                                           class="text-red-600 hover:text-red-900 inline-flex items-center gap-1 transition-colors"
                                           onclick="return confirm('Confirmer la suppression?')">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                                            </svg>
                                            Supprimer
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </template>

            <!-- Pharmacies Table -->
            <template x-if="activeTab === 'pharmacie'">
                <div x-show="activeTab === 'pharmacie'"
                     x-transition:enter="transition ease-out duration-300"
                     x-transition:enter-start="opacity-0 transform translate-y-4"
                     x-transition:enter-end="opacity-100 transform translate-y-0"
                     x-transition:leave="transition ease-in duration-200"
                     x-transition:leave-start="opacity-100 transform translate-y-0"
                     x-transition:leave-end="opacity-0 transform translate-y-4">
                    <div class="bg-white rounded-lg shadow overflow-x-auto">
                        <table class="w-full">
                            <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-4 text-left text-sm font-semibold text-gray-700">Nom</th>
                                <th class="px-6 py-4 text-left text-sm font-semibold text-gray-700">Prénom</th>
                                <th class="px-6 py-4 text-left text-sm font-semibold text-gray-700">Email</th>
                                <th class="px-6 py-4 text-left text-sm font-semibold text-gray-700">Téléphone</th>
                                <th class="px-6 py-4 text-left text-sm font-semibold text-gray-700">CIN</th>
                                <th class="px-6 py-4 text-left text-sm font-semibold text-gray-700">Adresse</th>
                                <th class="px-6 py-4 text-left text-sm font-semibold text-gray-700">Actions</th>
                            </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-200">
                            {% for pharmacie in pharmacies %}
                                <tr class="hover:bg-gray-50 transition-colors duration-200">
                                    <td class="px-6 py-4">{{ pharmacie.user.nom }}</td>
                                    <td class="px-6 py-4">{{ pharmacie.user.prenom }}</td>
                                    <td class="px-6 py-4 text-blue-600">{{ pharmacie.user.email }}</td>
                                    <td class="px-6 py-4">{{ pharmacie.user.numero }}</td>
                                    <td class="px-6 py-4">{{ pharmacie.cin }}</td>
                                    <td class="px-6 py-4">
                                        {{ pharmacie.adresse.rue ?? 'N/A' }}<br>
                                        {{ pharmacie.adresse.ville ?? '' }}
                                        {{ pharmacie.adresse.quartier ?? '' }}
                                    </td>
                                    <td class="px-6 py-4 space-x-3">
                                        <!-- Actions buttons same as medecins -->
                                        <a href="{{ path('app_admin_user_edit', {type: 'pharmacie', id: pharmacie.user.id}) }}"
                                           class="text-blue-600 hover:text-blue-900 inline-flex items-center gap-1 transition-colors">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/>
                                            </svg>
                                            Modifier
                                        </a>
                                        <a href="{{ path('app_admin_user_delete', {type: 'pharmacie', id: pharmacie.user.id}) }}"
                                           class="text-red-600 hover:text-red-900 inline-flex items-center gap-1 transition-colors"
                                           onclick="return confirm('Confirmer la suppression?')">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                                            </svg>
                                            Supprimer
                                        </a>
                                    </td>

                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </template>

            <!-- Infirmiers Table -->
            <template x-if="activeTab === 'infermier'">
                <div x-show="activeTab === 'infermier'"
                     x-transition:enter="transition ease-out duration-300"
                     x-transition:enter-start="opacity-0 transform translate-y-4"
                     x-transition:enter-end="opacity-100 transform translate-y-0"
                     x-transition:leave="transition ease-in duration-200"
                     x-transition:leave-start="opacity-100 transform translate-y-0"
                     x-transition:leave-end="opacity-0 transform translate-y-4">
                    <div class="bg-white rounded-lg shadow overflow-x-auto">
                        <table class="w-full">
                            <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-4 text-left text-sm font-semibold text-gray-700">Nom</th>
                                <th class="px-6 py-4 text-left text-sm font-semibold text-gray-700">Prénom</th>
                                <th class="px-6 py-4 text-left text-sm font-semibold text-gray-700">Email</th>
                                <th class="px-6 py-4 text-left text-sm font-semibold text-gray-700">Téléphone</th>
                                <th class="px-6 py-4 text-left text-sm font-semibold text-gray-700">Spécialité</th>
                                <th class="px-6 py-4 text-left text-sm font-semibold text-gray-700">Actions</th>
                            </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-200">
                            {% for infermier in infermiers %}
                                <tr class="hover:bg-gray-50 transition-colors duration-200">
                                    <td class="px-6 py-4">{{ infermier.user.nom }}</td>
                                    <td class="px-6 py-4">{{ infermier.user.prenom }}</td>
                                    <td class="px-6 py-4 text-blue-600">{{ infermier.user.email }}</td>
                                    <td class="px-6 py-4">{{ infermier.user.numero }}</td>
                                    <td class="px-6 py-4">{{ infermier.service }}</td>
                                    <td class="px-6 py-4 space-x-3">
                                        <!-- Actions buttons same as medecins -->
                                        <a href="{{ path('app_admin_user_edit', {type: 'infermier', id: infermier.user.id}) }}"
                                           class="text-blue-600 hover:text-blue-900 inline-flex items-center gap-1 transition-colors">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/>
                                            </svg>
                                            Modifier
                                        </a>
                                        <a href="{{ path('app_admin_user_delete', {type: 'infermier', id: infermier.user.id}) }}"
                                           class="text-red-600 hover:text-red-900 inline-flex items-center gap-1 transition-colors"
                                           onclick="return confirm('Confirmer la suppression?')">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                                            </svg>
                                            Supprimer
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </template>

            <!-- Patients Table -->
            <template x-if="activeTab === 'patient'">
                <div x-show="activeTab === 'patient'"
                     x-transition:enter="transition ease-out duration-300"
                     x-transition:enter-start="opacity-0 transform translate-y-4"
                     x-transition:enter-end="opacity-100 transform translate-y-0"
                     x-transition:leave="transition ease-in duration-200"
                     x-transition:leave-start="opacity-100 transform translate-y-0"
                     x-transition:leave-end="opacity-0 transform translate-y-4">
                    <div class="bg-white rounded-lg shadow overflow-x-auto">
                        <table class="w-full">
                            <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-4 text-left text-sm font-semibold text-gray-700">Nom</th>
                                <th class="px-6 py-4 text-left text-sm font-semibold text-gray-700">Prénom</th>
                                <th class="px-6 py-4 text-left text-sm font-semibold text-gray-700">Email</th>
                                <th class="px-6 py-4 text-left text-sm font-semibold text-gray-700">Téléphone</th>
                                <th class="px-6 py-4 text-left text-sm font-semibold text-gray-700">CIN</th>
                                <th class="px-6 py-4 text-left text-sm font-semibold text-gray-700">Actions</th>
                            </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-200">
                            {% for patient in patients %}
                                <tr class="hover:bg-gray-50 transition-colors duration-200">
                                    <!-- Same structure as medecins -->
                                    <td class="px-6 py-4">{{ patient.user.nom }}</td>
                                    <td class="px-6 py-4">{{ patient.user.prenom }}</td>
                                    <td class="px-6 py-4 text-blue-600">{{ patient.user.email }}</td>
                                    <td class="px-6 py-4">{{ patient.user.numero }}</td>
                                    <td class="px-6 py-4">{{ patient.cin }}</td>
                                    <td class="px-6 py-4 space-x-3">
                                        <!-- Actions buttons same as medecins -->
                                        <a href="{{ path('app_admin_user_edit', {type: 'patient', id: patient.user.id}) }}"
                                           class="text-blue-600 hover:text-blue-900 inline-flex items-center gap-1 transition-colors">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/>
                                            </svg>
                                            Modifier
                                        </a>
                                        <a href="{{ path('app_admin_user_delete', {type: 'patient', id: patient.user.id}) }}"
                                           class="text-red-600 hover:text-red-900 inline-flex items-center gap-1 transition-colors"
                                           onclick="return confirm('Confirmer la suppression?')">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                                            </svg>
                                            Supprimer
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </template>
        </div>
    </div>
{% endblock %}