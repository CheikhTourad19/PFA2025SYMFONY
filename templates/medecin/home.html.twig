{% extends 'medecin/index.html.twig' %}

{# templates/medecin/home.html.twig #}


{% block content %}
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Header avec bienvenue et statistiques -->
        <div class="mb-8">
            <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4">
                <div>
                    <h1 class="text-3xl font-bold text-gray-900">Bonjour, Dr. {{ app.user.prenom }}</h1>
                    <p class="text-gray-600 mt-2">Bienvenue dans votre espace professionnel</p>
                </div>
                <div class="grid grid-cols-2 md:grid-cols-4 gap-4 w-full md:w-auto">
                    <div class="bg-white rounded-lg shadow p-4 text-center">
                        <div class="text-blue-600 text-2xl font-bold">12</div>
                        <div class="text-gray-500 text-sm">Rendez-vous aujourd'hui</div>
                    </div>
                    <div class="bg-white rounded-lg shadow p-4 text-center">
                        <div class="text-green-600 text-2xl font-bold">5</div>
                        <div class="text-gray-500 text-sm">Patients en attente</div>
                    </div>
                    <div class="bg-white rounded-lg shadow p-4 text-center">
                        <div class="text-yellow-600 text-2xl font-bold">3</div>
                        <div class="text-gray-500 text-sm">Ordonnances à signer</div>
                    </div>
                    <div class="bg-white rounded-lg shadow p-4 text-center">
                        <div class="text-red-600 text-2xl font-bold">2</div>
                        <div class="text-gray-500 text-sm">Messages non lus</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Section principale avec grid -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            <!-- Calendrier / Agenda -->
            <div class="lg:col-span-2 bg-white rounded-xl shadow-md overflow-hidden">
                <div class="p-6">
                    <div class="flex justify-between items-center mb-4">
                        <h2 class="text-xl font-semibold text-gray-800">Votre agenda</h2>
                        <a href="{{ path('app_medecin_calendrier') }}" class="text-blue-600 hover:text-blue-800 text-sm flex items-center">
                            Voir tout <i class='bx bx-chevron-right ml-1'></i>
                        </a>
                    </div>

                    <!-- Mini calendrier -->
                    <div class="mb-6">
                        <div class="flex justify-between items-center mb-2">
                            <button class="p-1 rounded-full hover:bg-gray-100">
                                <i class='bx bx-chevron-left'></i>
                            </button>
                            <span class="font-medium">Mai 2023</span>
                            <button class="p-1 rounded-full hover:bg-gray-100">
                                <i class='bx bx-chevron-right'></i>
                            </button>
                        </div>
                        <div class="grid grid-cols-7 gap-1 text-center text-sm">
                            <div class="py-1 font-medium text-gray-500">L</div>
                            <div class="py-1 font-medium text-gray-500">M</div>
                            <div class="py-1 font-medium text-gray-500">M</div>
                            <div class="py-1 font-medium text-gray-500">J</div>
                            <div class="py-1 font-medium text-gray-500">V</div>
                            <div class="py-1 font-medium text-gray-500">S</div>
                            <div class="py-1 font-medium text-gray-500">D</div>

                            {% for day in 1..31 %}
                                <div class="py-1 rounded-full
                                {% if day == 15 %}bg-blue-100 text-blue-800 font-medium{% endif %}
                                {% if day == 'now'|date('d') %}border border-blue-500{% endif %}">
                                    {{ day }}
                                </div>
                            {% endfor %}
                        </div>
                    </div>

                    <!-- Prochains rendez-vous -->
                    <div>
                        <h3 class="text-lg font-medium text-gray-700 mb-3">Prochains rendez-vous</h3>
                        <div class="space-y-3">
                            {% for i in 1..3 %}
                                <div class="flex items-start p-3 rounded-lg border border-gray-100 hover:bg-gray-50 transition-colors">
                                    <div class="bg-blue-100 text-blue-800 rounded-lg p-2 mr-3 text-center">
                                        <div class="font-bold">09:00</div>
                                        <div class="text-xs">AM</div>
                                    </div>
                                    <div class="flex-1">
                                        <div class="font-medium">Consultation - Patient {{ i }}</div>
                                        <div class="text-sm text-gray-500">Motif: Suivi traitement</div>
                                    </div>
                                    <button class="text-gray-400 hover:text-gray-600">
                                        <i class='bx bx-dots-vertical-rounded'></i>
                                    </button>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>

            <!-- Section droite (Dossiers récents + Actions rapides) -->
            <div class="space-y-6">
                <!-- Dossiers médicaux récents -->
                <div class="bg-white rounded-xl shadow-md overflow-hidden">
                    <div class="p-6">
                        <div class="flex justify-between items-center mb-4">
                            <h2 class="text-xl font-semibold text-gray-800">Dossiers récents</h2>
                            <a href="{{ path('app_medecin_dossier_medical') }}" class="text-blue-600 hover:text-blue-800 text-sm flex items-center">
                                Voir tout <i class='bx bx-chevron-right ml-1'></i>
                            </a>
                        </div>

                        <div class="space-y-3">
                            {% for i in 1..4 %}
                                <div class="flex items-center p-2 rounded-lg hover:bg-gray-50 transition-colors">
                                    <div class="bg-gray-100 rounded-full p-2 mr-3">
                                        <i class='bx bx-user text-gray-600'></i>
                                    </div>
                                    <div class="flex-1 min-w-0">
                                        <p class="text-sm font-medium text-gray-900 truncate">Patient {{ i }}</p>
                                        <p class="text-xs text-gray-500 truncate">Dernière consultation: {{ "now"|date_modify("-#{i} day")|date("d/m/Y") }}</p>
                                    </div>
                                    <a href="{{ path('app_medecin_dossier_medical') }}" class="text-blue-600 hover:text-blue-800 p-1">
                                        <i class='bx bx-chevron-right'></i>
                                    </a>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>

                <!-- Actions rapides -->
                <div class="bg-white rounded-xl shadow-md overflow-hidden">
                    <div class="p-6">
                        <h2 class="text-xl font-semibold text-gray-800 mb-4">Actions rapides</h2>

                        <div class="grid grid-cols-2 gap-3">
                            <a href="{{ path('app_medecin_ordonnace') }}" class="flex flex-col items-center justify-center p-4 rounded-lg border border-gray-200 hover:border-blue-300 hover:bg-blue-50 transition-colors">
                                <div class="bg-blue-100 text-blue-600 rounded-full p-3 mb-2">
                                    <i class='bx bx-prescription text-xl'></i>
                                </div>
                                <span class="text-sm font-medium text-center">Nouvelle ordonnance</span>
                            </a>

                            <a href="{{ path('app_medecin_messages') }}" class="flex flex-col items-center justify-center p-4 rounded-lg border border-gray-200 hover:border-green-300 hover:bg-green-50 transition-colors">
                                <div class="bg-green-100 text-green-600 rounded-full p-3 mb-2">
                                    <i class='bx bx-message-rounded text-xl'></i>
                                </div>
                                <span class="text-sm font-medium text-center">Envoyer message</span>
                            </a>

                            <a href="{{ path('app_task_index') }}" class="flex flex-col items-center justify-center p-4 rounded-lg border border-gray-200 hover:border-yellow-300 hover:bg-yellow-50 transition-colors">
                                <div class="bg-yellow-100 text-yellow-600 rounded-full p-3 mb-2">
                                    <i class='bx bx-task text-xl'></i>
                                </div>
                                <span class="text-sm font-medium text-center">Tâches</span>
                            </a>

                            <a href="{{ path('app_medecin_profil') }}" class="flex flex-col items-center justify-center p-4 rounded-lg border border-gray-200 hover:border-purple-300 hover:bg-purple-50 transition-colors">
                                <div class="bg-purple-100 text-purple-600 rounded-full p-3 mb-2">
                                    <i class='bx bx-cog text-xl'></i>
                                </div>
                                <span class="text-sm font-medium text-center">Paramètres</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Section inférieure (Messages récents) -->
        <div class="mt-8 bg-white rounded-xl shadow-md overflow-hidden">
            <div class="p-6">
                <div class="flex justify-between items-center mb-4">
                    <h2 class="text-xl font-semibold text-gray-800">Messages récents</h2>
                    <a href="{{ path('app_medecin_messages') }}" class="text-blue-600 hover:text-blue-800 text-sm flex items-center">
                        Voir tout <i class='bx bx-chevron-right ml-1'></i>
                    </a>
                </div>

                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                        <tr>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Patient</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Sujet</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Statut</th>
                            <th scope="col" class="relative px-6 py-3"></th>
                        </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                        {% for i in 1..5 %}
                            <tr class="hover:bg-gray-50">
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="flex items-center">
                                        <div class="flex-shrink-0 h-10 w-10 rounded-full bg-gray-200 flex items-center justify-center">
                                            <i class='bx bx-user text-gray-600'></i>
                                        </div>
                                        <div class="ml-4">
                                            <div class="text-sm font-medium text-gray-900">Patient {{ i }}</div>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm text-gray-900">Question sur le traitement {{ i }}</div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm text-gray-500">{{ "now"|date_modify("-#{i} day")|date("d/m/Y") }}</div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full
                                    {% if i == 1 %}bg-green-100 text-green-800{% else %}bg-gray-100 text-gray-800{% endif %}">
                                    {% if i == 1 %}Nouveau{% else %}Lu{% endif %}
                                </span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                    <a href="{{ path('app_medecin_messages') }}" class="text-blue-600 hover:text-blue-900">Voir</a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}