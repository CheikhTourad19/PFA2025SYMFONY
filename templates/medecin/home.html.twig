{# templates/medecin/home.html.twig #}
{% extends 'medecin/index.html.twig' %}

{% block content %}
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- En-tête avec bienvenue -->
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-900">Bienvenue dans votre espace médecin</h1>
            <p class="text-gray-600 mt-2">Accédez rapidement à toutes les fonctionnalités essentielles</p>
        </div>

        <!-- Section des actions rapides améliorée -->
        <div class="mb-10">
            <h2 class="text-xl font-semibold text-gray-800 mb-4">Accès rapide aux fonctionnalités</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                <!-- Ordonnances -->
                <a href="{{ path('app_medecin_ordonnace') }}" class="group bg-white rounded-xl shadow-md overflow-hidden border border-gray-200 hover:border-blue-300 transition-all duration-200">
                    <div class="p-6">
                        <div class="flex items-center mb-4">
                            <div class="bg-blue-100 text-blue-600 rounded-lg p-3 mr-4">
                                <i class='bx bx-prescription text-2xl'></i>
                            </div>
                            <h3 class="text-lg font-medium text-gray-900">Gestion des ordonnances</h3>
                        </div>
                        <p class="text-gray-600 text-sm">Créer, modifier et archiver les ordonnances pour vos patients. Accédez à l'historique complet des prescriptions.</p>
                        <div class="mt-4 text-blue-600 group-hover:text-blue-800 flex items-center">
                            <span>Accéder</span>
                            <i class='bx bx-chevron-right ml-1 transition-transform group-hover:translate-x-1'></i>
                        </div>
                    </div>
                </a>

                <!-- Dossiers médicaux -->
                <a href="{{ path('app_medecin_dossier_medical') }}" class="group bg-white rounded-xl shadow-md overflow-hidden border border-gray-200 hover:border-green-300 transition-all duration-200">
                    <div class="p-6">
                        <div class="flex items-center mb-4">
                            <div class="bg-green-100 text-green-600 rounded-lg p-3 mr-4">
                                <i class='bx bx-folder text-2xl'></i>
                            </div>
                            <h3 class="text-lg font-medium text-gray-900">Dossiers patients</h3>
                        </div>
                        <p class="text-gray-600 text-sm">Consultez les dossiers médicaux complets, l'historique des consultations et les documents partagés.</p>
                        <div class="mt-4 text-green-600 group-hover:text-green-800 flex items-center">
                            <span>Accéder</span>
                            <i class='bx bx-chevron-right ml-1 transition-transform group-hover:translate-x-1'></i>
                        </div>
                    </div>
                </a>

                <!-- Agenda -->
                <a href="{{ path('app_medecin_calendrier') }}" class="group bg-white rounded-xl shadow-md overflow-hidden border border-gray-200 hover:border-purple-300 transition-all duration-200">
                    <div class="p-6">
                        <div class="flex items-center mb-4">
                            <div class="bg-purple-100 text-purple-600 rounded-lg p-3 mr-4">
                                <i class='bx bx-calendar text-2xl'></i>
                            </div>
                            <h3 class="text-lg font-medium text-gray-900">Agenda et RDV</h3>
                        </div>
                        <p class="text-gray-600 text-sm">Gérez votre planning, consultez les rendez-vous à venir et programmez de nouvelles consultations.</p>
                        <div class="mt-4 text-purple-600 group-hover:text-purple-800 flex items-center">
                            <span>Accéder</span>
                            <i class='bx bx-chevron-right ml-1 transition-transform group-hover:translate-x-1'></i>
                        </div>
                    </div>
                </a>

                <!-- Messagerie -->
                <a href="{{ path('app_medecin_messages') }}" class="group bg-white rounded-xl shadow-md overflow-hidden border border-gray-200 hover:border-yellow-300 transition-all duration-200">
                    <div class="p-6">
                        <div class="flex items-center mb-4">
                            <div class="bg-yellow-100 text-yellow-600 rounded-lg p-3 mr-4">
                                <i class='bx bx-chat text-2xl'></i>
                            </div>
                            <h3 class="text-lg font-medium text-gray-900">Messagerie sécurisée</h3>
                        </div>
                        <p class="text-gray-600 text-sm">Échangez en toute sécurité avec vos patients et collègues. Messagerie cryptée conforme RGPD.</p>
                        <div class="mt-4 text-yellow-600 group-hover:text-yellow-800 flex items-center">
                            <span>Accéder</span>
                            <i class='bx bx-chevron-right ml-1 transition-transform group-hover:translate-x-1'></i>
                        </div>
                    </div>
                </a>
            </div>
        </div>

        <!-- Section des fonctionnalités clés -->
        <div class="mb-10">
            <h2 class="text-xl font-semibold text-gray-800 mb-6">Fonctionnalités principales</h2>

            <div class="bg-white rounded-xl shadow-md overflow-hidden">
                <div class="grid grid-cols-1 md:grid-cols-2 divide-y md:divide-y-0 md:divide-x divide-gray-200">
                    <!-- Colonne gauche -->
                    <div class="p-6">
                        <div class="flex items-start mb-6">
                            <div class="bg-blue-50 text-blue-600 rounded-lg p-3 mr-4">
                                <i class='bx bx-task text-xl'></i>
                            </div>
                            <div>
                                <h3 class="text-lg font-medium text-gray-900 mb-2">Gestion des tâches</h3>
                                <p class="text-gray-600 text-sm">Organisez votre travail avec le système de tâches intégré. Créez des rappels pour les suivis patients, les examens à prescrire ou les comptes-rendus à rédiger.</p>
                                <a href="{{ path('app_task_index') }}" class="inline-block mt-3 text-blue-600 hover:text-blue-800 text-sm font-medium">
                                    Accéder aux tâches <i class='bx bx-chevron-right ml-1'></i>
                                </a>
                            </div>
                        </div>


                    </div>

                    <!-- Colonne droite -->
                    <div class="p-6">
                        <div class="flex items-start mb-6">
                            <div class="bg-purple-50 text-purple-600 rounded-lg p-3 mr-4">
                                <i class='bx bx-shield text-xl'></i>
                            </div>
                            <div>
                                <h3 class="text-lg font-medium text-gray-900 mb-2">Sécurité des données</h3>
                                <p class="text-gray-600 text-sm">Toutes vos actions sont tracées et sécurisées. Accédez aux paramètres de sécurité et aux historiques d'accès.</p>
                                <a href="{{ path('app_medecin_profil') }}" class="inline-block mt-3 text-purple-600 hover:text-purple-800 text-sm font-medium">
                                    Paramètres de sécurité <i class='bx bx-chevron-right ml-1'></i>
                                </a>
                            </div>
                        </div>

                        <div class="flex items-start">
                            <div class="bg-yellow-50 text-yellow-600 rounded-lg p-3 mr-4">
                                <i class='bx bx-support text-xl'></i>
                            </div>
                            <div>
                                <h3 class="text-lg font-medium text-gray-900 mb-2">Assistance technique</h3>
                                <p class="text-gray-600 text-sm">Besoin d'aide ? Consultez notre centre d'aide en ligne ou contactez notre support technique.</p>
                                <a href="#" class="inline-block mt-3 text-yellow-600 hover:text-yellow-800 text-sm font-medium">
                                    Accéder au support <i class='bx bx-chevron-right ml-1'></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Section des dernières mises à jour -->
        <div class="bg-blue-50 rounded-xl p-6">
            <div class="flex items-center mb-4">
                <i class='bx bx-info-circle text-blue-600 text-2xl mr-3'></i>
                <h2 class="text-xl font-semibold text-gray-800">Informations importantes</h2>
            </div>

            <div class="space-y-4">
                <div class="flex items-start">
                    <div class="flex-shrink-0 mt-1">
                        <div class="bg-blue-100 text-blue-600 rounded-full p-1">
                            <i class='bx bx-calendar-check text-sm'></i>
                        </div>
                    </div>
                    <div class="ml-3">
                        <p class="text-sm text-gray-700">
                            <strong>ceci est une version beta</strong>
                        </p>
                    </div>
                </div>


            </div>
        </div>
    </div>
{% endblock %}