{% extends 'medecin/task.html.twig' %}

{% block task_content %}
    <div class="mb-8">
        <h1 class="text-2xl font-bold text-gray-800 mb-6">{{ block('title') }}</h1>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for task in tasks %}
                <div class="bg-white rounded-xl shadow-md overflow-hidden transition-all duration-300 hover:shadow-lg hover:-translate-y-1
                        {{ task.status.value == 'completed' ? 'border-l-4 border-green-500 bg-green-50' : '' }}">
                    <div class="p-6 flex flex-col h-full">
                        <h3 class="text-lg font-semibold text-gray-800 mb-2">{{ task.title }}</h3>

                        <p class="text-gray-600 mb-4 flex-grow">
                            {{ task.description|default('Aucune description disponible') }}
                        </p>

                        <div class="mt-auto pt-4 border-t border-gray-100">
                            <div class="flex flex-col space-y-2 text-sm text-gray-600">
                                <div class="flex items-center">
                                    <i class="far fa-calendar-alt mr-2 text-gray-400"></i>
                                    Créée: {{ task.createdAt|date('d/m/Y') }}
                                </div>
                                {% if task.deadline %}
                                    <div class="flex items-center">
                                        <i class="far fa-clock mr-2 text-gray-400"></i>
                                        Échéance: {{ task.deadline|date('d/m/Y') }}
                                    </div>
                                {% endif %}
                            </div>

                            <div class="mt-4 flex justify-between items-center">
                            <span class="px-3 py-1 rounded-full text-sm font-medium
                                        {{ task.status.value == 'completed'
                            ? 'bg-green-100 text-green-800'
                            : 'bg-yellow-100 text-yellow-800' }}">
                                {{ task.status.value|capitalize }}
                            </span>

                                {% if task.status.value != 'completed' %}
                                    <form action="{{ path('task_complete', {'id': task.id}) }}" method="POST">
                                        <input type="hidden" name="_token" value="{{ csrf_token('complete' ~ task.id) }}">
                                        <button type="submit" class="text-sm bg-blue-600 hover:bg-blue-700 text-white px-3 py-1 rounded-lg transition-all flex items-center">
                                            <i class="fas fa-check-circle mr-1"></i>
                                            Terminer
                                        </button>
                                    </form>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-span-full text-center py-12">
                    <div class="bg-blue-50 text-blue-800 p-6 rounded-xl inline-block max-w-md">
                        <i class="fas fa-tasks text-3xl mb-3 text-blue-400"></i>
                        <h3 class="text-lg font-medium mb-1">Aucune tâche à afficher</h3>
                        <p class="text-sm text-blue-600">Créez votre première tâche pour commencer</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}