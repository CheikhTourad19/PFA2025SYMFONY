{# templates/base.html.twig #}
   {% extends 'base.html.twig' %}
   {% block title %}MedSuite{% endblock %}


    {% block stylesheets %}
        <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <style>
        :root {
            --primary: #3B82F6;
            --primary-dark: #2563EB;
            --glass: rgba(188, 226, 237, 0.95);
            --shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
            --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }
        .glass-nav {
            position: fixed;
            left: 0;
            top: 0;
            height: 100vh;
            width: 280px;
            background: var(--glass);
            backdrop-filter: blur(12px);
            box-shadow: var(--shadow);
            transition: var(--transition);
            z-index: 1000;
            border-right: 1px solid rgba(0, 0, 0, 0.05);
        }

        .nav-header {
            padding: 1.5rem;
            display: flex;
            align-items: center;
            gap: 1rem;
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
        }

        .logo {
            width: 40px;
            height: 40px;
            background: var(--primary);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: 600;
        }

        .menu-item {
            position: relative;
            margin: 0.5rem 1rem;
            border-radius: 12px;
            overflow: hidden;
        }

        .menu-link {
            display: flex;
            align-items: center;
            padding: 1rem;
            color: #4B5563;
            text-decoration: none;
            transition: var(--transition);
        }

        .menu-icon {
            width: 40px;
            height: 40px;
            background: rgba(59, 130, 246, 0.1);
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 1rem;
            transition: var(--transition);
        }

        .menu-icon i {
            color: var(--primary);
            font-size: 1.2rem;
        }

        .menu-text {
            font-family: 'Inter', sans-serif;
            font-weight: 500;
            transition: var(--transition);
        }

        .menu-item.active {
            background: rgba(59, 130, 246, 0.1);
        }

        .menu-item.active .menu-icon {
            background: var(--primary);
        }

        .menu-item.active .menu-icon i {
            color: white;
        }

        .menu-item.active .menu-text {
            color: var(--primary-dark);
            font-weight: 600;
        }

        .menu-item:hover .menu-icon {
            transform: translateX(5px);
        }

        body.shrink .glass-nav {
            width: 88px;
        }

        body.shrink .menu-text {
            opacity: 0;
        }

        .user-profile {
            padding: 1rem;
            background: rgba(59, 130, 246, 0.05);
            margin: 1rem;
            border-radius: 12px;
        }
    </style>
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}

        <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.12.0/dist/cdn.min.js" defer></script>
    {% endblock %}


{% block body  %}

    <nav class="bg-gradient-to-r from-blue-600 to-blue-500 text-white shadow-lg" :class="{ 'backdrop-blur-sm bg-opacity-80': isModalOpen || isFlashModalOpen }" x-data="{ isMobileMenuOpen: false }">
        <div class="relative flex items-center justify-between h-16 md:h-20">
            <!-- Logo and app name -->
            <div class="flex-shrink-0 flex items-center space-x-3">
                <!-- Modern animated logo -->

                <span class="text-2xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-white to-blue-100 tracking-tight">Espace Patient</span>
            </div>


                {% set currentRoute = app.request.attributes.get('_route') %}
    {% set menu_items = {
                    'app_medecin_home': 'bx-home',
                    'app_task_index': 'bx-task',
                    'app_medecin_dossier_medical': 'bx-folder',
                    'app_medecin_messages': 'bx-chat',
                    'app_medecin_calendrier': 'bx-calendar',
                    'app_medecin_profil': 'bx-user',
                    'app_medecin_ordonnace':'bx-ordonnance',
                } %}
    <div class="hidden md:flex items-center space-x-1">
        {% set currentRoute = app.request.attributes.get('_route') %}

        <!-- Navigation items with modern hover effects -->


            {% for route, icon in menu_items %}
                <a href="{{ path(route) }}" class="group relative px-4 py-2 rounded-lg transition-all duration-500 {{ currentRoute == route ? 'bg-white text-blue-700 shadow-md' : 'hover:bg-blue-700/30' }}">
                    <div class="flex items-center space-x-2">
                        <div class="menu-icon">
                            <i class='bx {{ icon }}'></i>
                        </div>
                        <span class="menu-text">{{ icon|replace({'bx-': '', 'bx': ''})|capitalize }}</span>
                    </div>
                    <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-white group-hover:w-full transition-all duration-500"></span>
                </a>
            {% endfor %}
            <li>
                <form action="{{ path('app_logout') }}" method="post">
            <button
                    class="w-full flex items-center px-4 py-3 text-red-600 hover:bg-red-50 dark:hover:bg-red-900/20 dark:text-red-500 rounded-lg transition-colors" type="submit"
            >
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5 mr-3 text-red-500">
                    <path fill-rule="evenodd" d="M3 4.25A2.25 2.25 0 015.25 2h5.5A2.25 2.25 0 0113 4.25v2a.75.75 0 01-1.5 0v-2a.75.75 0 00-.75-.75h-5.5a.75.75 0 00-.75.75v11.5c0 .414.336.75.75.75h5.5a.75.75 0 00.75-.75v-2a.75.75 0 011.5 0v2A2.25 2.25 0 0110.75 18h-5.5A2.25 2.25 0 013 15.75V4.25z" clip-rule="evenodd" />
                    <path fill-rule="evenodd" d="M6 10a.75.75 0 01.75-.75h9.546l-1.048-.943a.75.75 0 111.004-1.114l2.5 2.25a.75.75 0 010 1.114l-2.5 2.25a.75.75 0 11-1.004-1.114l1.048-.943H6.75A.75.75 0 016 10z" clip-rule="evenodd" />
                </svg>
                Déconnexion
            </button>
                </form>

            </li>
    </div>
    </div>


    <div class="user-profile">
        <div class="menu-link">
            <div class="menu-icon">
                <i class='bx bx-user-circle'></i>
            </div>
            <div class="menu-text">
                <h4>{{ app.user.fullName }}</h4>
                <small>Médecin</small>
            </div>
        </div>
    </div>
</nav>

<main >
    {% block content %}{% endblock %}
</main>

<script>
    document.querySelector('.logo').addEventListener('click', () => {
        document.body.classList.toggle('shrink');
    });
</script>
{% endblock %}