{% extends 'medecin/task.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .task-grid .row {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 2rem;
        }

        @media (max-width: 992px) {
            .task-grid .row {
                grid-template-columns: 1fr;
            }
        }

        .task-card {
            min-height: 320px;
            margin: 0;
        }
        /* Styles spécifiques aux cartes de tâches */
        .task-grid {
            padding: 2rem;
            margin-top: 70px;
        }
        .task-card {
            background: linear-gradient(145deg, #f0f9ff 0%, #348cb5 100%) !important;
            border: none !important;
            border-radius: 15px !important;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
            transition: all 0.3s ease;
            min-height: 280px;
            display: flex;
            flex-direction: column;
        }

        .task-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 15px rgba(33, 150, 243, 0.2);
        }

        .card-header-section {
            display: flex;
            justify-content: space-between;
            padding: 1.5rem 1.5rem 0;
        }

        .task-title {
            font-size: 1.3rem;
            font-weight: 700;
            color: #0d47a1;
            margin: 0;
        }

        .task-creator {
            text-align: right;
            color: #546e7a;
        }

        .task-creator span {
            display: block;
            font-size: 0.95rem;
            color: #37474f;
            font-weight: 500;
        }

        .task-description {
            padding: 1.5rem;
            color: #607d8b;
            flex-grow: 1;
            font-size: 0.95rem;
            line-height: 1.6;
        }

        .card-footer-section {
            padding: 1.5rem;
            border-top: 1px solid rgba(255,255,255,0.2);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .task-deadline {
            font-size: 0.9rem;
            color: #78909c;
        }

        .task-action-btn {
            background: #00c853 !important;
            border: none;
            border-radius: 8px;
            padding: 0.6rem 1.5rem;
            color: white !important;
            transition: transform 0.3s ease;
        }

        .task-action-btn:hover {
            transform: scale(1.05);
            background: #009624 !important;
        }

        .task-completed-badge {
            background: #00c853 !important;
            padding: 0.7rem 1.2rem;
            border-radius: 8px;
            color: white !important;
        }

        @media (max-width: 768px) {
            .task-grid {
                padding: 1rem;
            }

            .task-card {
                min-height: auto;
            }

            .card-header-section {
                flex-direction: column;
                gap: 1rem;
            }

            .task-creator {
                text-align: left;
            }
        }
    </style>
{% endblock %}

{% block content %}
    <div class="task-grid">
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            {% for task in tasks %}
                <div class="col">
                    <div class="task-card">
                        <div class="card-header-section">
                            <h5 class="task-title">{{ task.title }}</h5>
                            <div class="task-creator">
                                Créée par :<br>
                                <span>{{ task.createdBy.user.prenom }} {{ task.createdBy.user.nom }}</span>
                            </div>
                        </div>

                        <p class="task-description">{{ task.description }}</p>

                        <div class="card-footer-section">
                            <small class="task-deadline">
                                <i class="fas fa-calendar-alt me-1"></i>
                                {{ task.deadline|date('d/m/Y') }}
                            </small>

                            {% if task.status.value == 'pending' %}
                                <form action="{{ path('task_complete', {'id': task.id}) }}" method="POST">
                                    <input type="hidden" name="_token" value="{{ csrf_token('complete' ~ task.id) }}">
                                    <button type="submit" class="btn task-action-btn">
                                        <i class="fas fa-check-circle me-2"></i>
                                        Terminer
                                    </button>
                                </form>
                            {% else %}
                                <span class="badge task-completed-badge">
                                    <i class="fas fa-check me-2"></i>
                                    Terminée
                                </span>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12 text-center py-5">
                    <div class="alert alert-info">
                        Aucune tâche trouvée
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}