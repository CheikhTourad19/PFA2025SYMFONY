{% extends 'medecin/index.html.twig' %}

{% block title %}Gestion des Tâches{% endblock %}

{% block content %}
    <div class="flex h-full min-h-screen">
        <!-- Left Navigation Bar - Fixed and Full Height -->
        <aside class=" inset-y-0 left-0 w-64 bg-blue-600 text-white shadow-lg overflow-y-auto ">
            <div class="p-4 flex items-center space-x-3 border-b border-blue-500/50">
                <i class="fas fa-tasks text-xl"></i>
                <span class="text-xl font-semibold">Tâches</span>
            </div>

            <nav class="p-4 space-y-2">
                <a href="{{ path('app_task_new') }}"
                   class="flex items-center space-x-3 p-3 rounded-lg transition-all duration-200
                      {{ app.request.get('_route') == 'app_task_new' ? 'bg-blue-700/80' : 'hover:bg-blue-700/50' }}">
                    <i class="fas fa-plus-circle text-lg w-6 text-center"></i>
                    <span>Créer</span>
                </a>

                <a href="{{ path('app_task_index') }}"
                   class="flex items-center space-x-3 p-3 rounded-lg transition-all duration-200
                      {{ app.request.get('_route') == 'app_task_index' ? 'bg-blue-700/80' : 'hover:bg-blue-700/50' }}">
                    <i class="fas fa-clipboard-list text-lg w-6 text-center"></i>
                    <span>Mes tâches</span>
                </a>

                <a href="{{ path('app_task_followed') }}"
                   class="flex items-center space-x-3 p-3 rounded-lg transition-all duration-200
                      {{ app.request.get('_route') == 'app_task_followed' ? 'bg-blue-700/80' : 'hover:bg-blue-700/50' }}">
                    <i class="fas fa-eye text-lg w-6 text-center"></i>
                    <span>Suivies</span>
                </a>
            </nav>
        </aside>

        <!-- Main Content Area - With Left Margin for Sidebar -->
        <main class="flex-1 p-8 bg-gray-50 min-h-screen overflow-y-auto">
            {% block task_content %}
                <!-- Le contenu des pages enfants -->
            {% endblock %}
        </main>
    </div>
{% endblock %}