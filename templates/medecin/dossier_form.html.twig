{% extends 'medecin/index.html.twig' %}

{% block content %}
    <div class="min-h-screen bg-white dark:bg-gray-900 text-gray-800 dark:text-white py-10 px-4">
        <div class="max-w-3xl mx-auto">
            <h1 class="text-3xl font-bold mb-6 text-blue-800 dark:text-blue-400">
                {{ isEdit ? 'Modifier' : 'Créer' }} un dossier médical
            </h1>

            {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
            <div class="grid sm:grid-cols-2 gap-6">
                {{ form_row(form.groupeSanguin, {
                    'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500'},
                    'label_attr': {'class': 'block text-sm font-medium text-gray-700'}
                }) }}
                {{ form_row(form.allergies, {
                    'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500'},
                    'label_attr': {'class': 'block text-sm font-medium text-gray-700'}
                }) }}
                {{ form_row(form.antecedentsMedicaux, {
                    'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500'},
                    'label_attr': {'class': 'block text-sm font-medium text-gray-700'}
                }) }}
                {{ form_row(form.antecedentsFamiliaux, {
                    'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500'},
                    'label_attr': {'class': 'block text-sm font-medium text-gray-700'}
                }) }}
            </div>

            <button type="submit" class="mt-6 bg-blue-600 hover:bg-blue-700 text-white font-semibold px-4 py-2 rounded">
                {{ isEdit ? 'Mettre à jour' : 'Créer' }}
            </button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

