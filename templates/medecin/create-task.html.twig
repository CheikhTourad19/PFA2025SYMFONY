{% extends 'medecin/task.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .task-form-container {
            max-width: 800px;
            margin: 2rem auto;
            padding: 2rem;
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .form-title {
            color: #1a365d;
            font-size: 1.8rem;
            margin-bottom: 2rem;
            text-align: center;
        }

        .task-form .form-group {
            margin-bottom: 1.5rem;
        }

        .task-form label {
            font-weight: 600;
            color: #2d3748;
            margin-bottom: 0.5rem;
        }
    </style>
{% endblock %}

{% block content %}
    <div class="task-form-container">
        <h2 class="form-title">
            <i class="fas fa-plus-circle me-2"></i>Nouvelle Tâche
        </h2>

        {{ form_start(form, {'attr': {'class': 'task-form'}}) }}
        <div class="form-grid">
            <div class="form-group">
                {{ form_label(form.title) }}
                {{ form_widget(form.title) }}
            </div>

            <div class="form-group">
                {{ form_label(form.assignedTo) }}
                {{ form_widget(form.assignedTo) }}
            </div>

            <div class="form-group">
                {{ form_label(form.deadline) }}
                {{ form_widget(form.deadline) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.description) }}
            {{ form_widget(form.description) }}
        </div>

        <button type="submit" class="btn btn-primary w-100 py-2">
            <i class="fas fa-save me-2"></i>Créer la Tâche
        </button>
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        flatpickr('.datepicker', {
            dateFormat: "d/m/Y",
            minDate: "today",
            locale: "fr"
        });
    </script>
{% endblock %}